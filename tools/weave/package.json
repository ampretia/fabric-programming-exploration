{
    "name": "weave",
    "version": "1.0.0",
    "description": "Weave: Resource Generator for Fabric development",
    "main": "dist/index.js",
    "bin": {
        "weave": "./dist/cli.js"
    },
    "typings": "dist/index.d.ts",
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    },
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "pretest": "npm run lint",
        "test": "nyc mocha -r ts-node/register src/**/*.spec.ts",
        "build": "tsc && cp -r ./templates ./dist/",
        "build:watch": "tsc -w",
        "prepublishOnly": "npm run build"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "ajv": "^6.12.3",
        "composer-concerto": "^0.70.5",
        "jsonata": "^1.6.4",
        "mkdirp": "^0.5.1",
        "nunjucks": "^3.1.7",
        "prettier": "^1.15.3",
        "yargs": "^12.0.5"
    },
    "devDependencies": {
        "@types/chai": "^4.1.4",
        "@types/mocha": "^5.2.3",
        "@types/node": "^10.3.6",
        "@types/sinon": "^5.0.7",
        "@types/sinon-chai": "^3.2.0",
        "chai": "^4.1.2",
        "gulp": "^4.0.0",
        "literate-shell": "file:literate-shell-1.0.0.tgz",
        "mocha": "^5.2.0",
        "nyc": "^14.1.1",
        "sinon": "^6.0.0",
        "sinon-chai": "^3.2.0",
        "standard-version": "^4.4.0",
        "ts-node": "^7.0.0",
        "tslint": "^5.10.0",
        "typescript": "^3.3.3"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "coverage/**",
            "dist/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
    }
}
